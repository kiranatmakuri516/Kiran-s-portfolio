    <script>
        // JavaScript code to enable desktop site mode
        function enableDesktopMode() {
            var desktopViewport = document.createElement('meta');
            desktopViewport.setAttribute('name', 'viewport');
            desktopViewport.setAttribute('content', 'width=1200, user-scalable=yes');

            var existingViewport = document.querySelector('meta[name="viewport"]');
            if (existingViewport) {
                existingViewport.parentNode.replaceChild(desktopViewport, existingViewport);
            } else {
                document.head.appendChild(desktopViewport);
            }
        }

        // Call enableDesktopMode function automatically if screen resolution is less than 1000 pixels
        if (window.innerWidth < 1000) {
            enableDesktopMode();
        }
    </script>
